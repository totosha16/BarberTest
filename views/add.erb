<h2 id="clickme">Добавление контакта <<< click me</h2>
<!-- при клике на заголовок пропадает кнопка Добавить-->


<form action="/add" method="POST">
	<div class="input-group">
		<span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
	  <input type="text" class="form-control" placeholder="Фамилия Имя Отчество" aria-describedby="basic-addon1" name="name" value="<%=@name%>">
	</div>

	<br/>

	<div class="input-group">
		<span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span></span>
	  <input type="text" class="form-control" placeholder="Номер телефона" aria-describedby="basic-addon1" name="phone" value="<%=@phone%>">
	</div>

	<br/>

	<div class="input-group">
		<span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
	  <input type="text" class="form-control" placeholder="E-mail" aria-describedby="basic-addon1" name="mail" value="<%=@mail%>">
	</div>
	<br/>
	<button type="submit" class="btn btn-primary" id="book">Добавить</button>
</form>



<script type="text/javascript">
$(function() {

$( "#clickme" ).click(function() {
  $( "#book" ).hide( "slow" );
});

});
</script>